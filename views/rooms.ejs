        "/images/room2.jpg"
    ],
    [
        "/images/room33.jpg",
        "/images/room31.jpg",
        "/images/room32.jpg",
        "/images/room3.jpg"
    ],
    [
        "/images/room4.jpg",
        "/images/room41.jpg",
        "/images/room42.jpg",
        "/images/room43.jpg"
    ],
    [
        "/images/room51.jpg",
        "/images/room5.jpg",
        "/images/room52.jpg"
    ],
    [
        "/images/room6.jpg",
        "/images/room61.jpg",
        "/images/room62.jpg",
        "/images/room63.jpg"
    ],
    [
        "/images/private4.jpg",
        "/images/private2.jpg",
        "/images/private3.jpg",
        "/images/private1.jpg"
    ]
];

const currentIndexes = Array(roomImages.length).fill(0);

document.querySelectorAll('.carousel-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const roomIdx = parseInt(this.getAttribute('data-room'));
        const img = document.querySelector(`.room-carousel-img[data-room="${roomIdx}"]`);
        if (!img) return;
        if (this.classList.contains('prev')) {
            currentIndexes[roomIdx] = (currentIndexes[roomIdx] - 1 + roomImages[roomIdx].length) % roomImages[roomIdx].length;
        } else {
            currentIndexes[roomIdx] = (currentIndexes[roomIdx] + 1) % roomImages[roomIdx].length;
        }
        img.src = roomImages[roomIdx][currentIndexes[roomIdx]];
    });
    })
});
</script>
