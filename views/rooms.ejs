<script>
document.addEventListener('DOMContentLoaded', function() {
const roomImages = [
    [
        "/images/room11.jpg",
        "/images/room1.jpg",
        "/images/room12.jpg",
        "/images/room13.jpg"
    ],
    [
        "/images/room23.jpg",
